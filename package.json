{
  "name": "@philipseo/actions",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Philip Seo <hbnb7894@gmail.com>",
  "homepage": "https://github.com/philipseo/actions",
  "repository": {
    "type": "git",
    "url": "https://github.com/philipseo/actions"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf dist && pnpm build:slack-notify && pnpm build:create-test-coverage-comment",
    "build:slack-notify": "ncc build src/slack-notify/index.ts -m -o dist/slack-notify/",
    "build:create-test-coverage-comment": "ncc build src/create-test-coverage-comment/index.ts -m -o dist/create-test-coverage-comment/",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "lint": "pnpm eslint && pnpm prettier",
    "lint:fix": "pnpm eslint:fix && pnpm prettier:fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "@octokit/rest": "20.0.2",
    "@philipseo/scripts": "0.0.7",
    "@slack/web-api": "7.0.1",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.6"
  },
  "devDependencies": {
    "@philipseo/configs": "0.0.4",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-reports": "^3.0.4",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.6",
    "@vercel/ncc": "0.38.1",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0"
  }
}
